meta {
  name: Create Project
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/projects
  body: json
  auth: basic
}

auth:basic {
  username: {{username}}
  password: {{password}}
}

body:json {
  {
    "name": "Bearly Fit"
  }
}

assert {
  res.status: eq 201
  res.body.name: eq Bearly Fit
}

script:post-response {
  if (res.status === 201) {
    bru.setEnvVar("projectId", res.body.id);
  }
}
