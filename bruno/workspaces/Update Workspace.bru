  username: {{username}}
  password: {{password}}
}

body:json {
  {
    "name": "Updated Workspace Name",
    "path": "/home/james/updated-path"
  }
}

assert {
  res.status: eq 200
  res.body.name: eq Updated Workspace Name
}
