generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Host {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(255)
  type      String    @db.VarChar(50) // 'ssh' | 'api'

  // SSH fields
  hostname  String?   @db.VarChar(255)
  port      Int?      @default(22)
  username  String?   @db.VarChar(255)
  password  String?   @db.Text
  hostKeyFingerprint String? @map("host_key_fingerprint") @db.VarChar(255)

  // API fields
  endpoint  String?   @db.VarChar(255)
  apiKey    String?   @map("api_key") @db.Text
  provider  String?   @db.VarChar(100)
  model     String?   @db.VarChar(100)

  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")
  workspaces Workspace[]
  clankers   Clanker[]

  @@map("hosts")
}

model Project {
  id          String      @id @default(uuid())
  name        String      @db.VarChar(255)
  description String?     @db.Text
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")
  workspaces Workspace[]

  @@map("projects")
}

model Workspace {
  workspaceId String    @id @default(uuid())
  projectId   String    @map("project_id")
  project     Project   @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  hostId      String    @map("host_id")
  host        Host      @relation(fields: [hostId], references: [hostId], onDelete: Cascade)
  name        String    @db.VarChar(255)
  path        String?   @db.Text
  sessionId   String?   @map("session_id") @db.VarChar(255)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  messages    Message[]

  @@map("workspaces")
  @@index([projectId])
  @@index([hostId])
}

model Message {
  id          String    @id @default(uuid())
  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [workspaceId], onDelete: Cascade)
  role        String    @db.VarChar(50)
  content     String    @db.Text
  toolCalls   Json?     @map("tool_calls")
  rawEvents   Json?     @map("raw_events")
  status      String    @default("pending") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map("created_at")

  @@map("messages")
  @@index([workspaceId])
}

model Clanker {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  adapterId String   @map("adapter_id") @db.VarChar(100)

  // Console adapters only — which SSH host runs this CLI tool
  hostId    String?  @map("host_id")
  host      Host?    @relation(fields: [hostId], references: [id], onDelete: SetNull)

  // Adapter-specific config — driven by adapter.fields
  config    Json     @default("{}")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("clankers")
  @@index([hostId])
  @@index([adapterId])
}
