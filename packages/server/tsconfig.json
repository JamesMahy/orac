{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@database/*": ["src/prisma/*"],
      "@hosts/*": ["src/hosts/*"],
      "@projects/*": ["src/projects/*"],
      "@workspaces/*": ["src/workspaces/*"],
      "@ssh/*": ["src/ssh/*"],
      "@adapters/*": ["src/adapters/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
